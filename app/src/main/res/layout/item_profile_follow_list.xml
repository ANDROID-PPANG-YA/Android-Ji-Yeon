<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="21dp"
        tools:src="@drawable/profile_jiyeon"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/sopt_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="이강민"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textFontWeight="700"
        android:textColor="@color/sopt_black"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_intro"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text ="안드로이드 파트장"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textFontWeight="400"
        android:layout_marginTop="5dp"
        android:textColor="@color/thesopt_darkgray"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>